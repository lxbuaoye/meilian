page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom));
  background-color: rgba(244, 246, 249, 1);
}

.main-container {
  height: 100%;
  display: flex;
  margin: 12rpx;
}

.button {
}

.button::after {
  border: none;
}

.small-font {
  font-weight: 400;
  font-size: 14rpx;
  color: #1c2023;
}

.description {
  font-weight: 400;
  font-size: 12rpx;
  color: #8f969c;
}

/* 滚动视图，包含所有说明内容 */
.intro-scroll-view {
  flex: 1; /* 占据除底部按钮外所有空间 */
  box-sizing: border-box;
}

/* 说明内容包裹层，用于设置左右内边距 */
.intro-content {
  display: flex;
  flex-direction: column;
  background-color: #fff; /* 内容背景为白色 */
  border-radius: 10rpx;
  padding: 0 12rpx; /* 容器左右外边距，形成居中效果 */
  padding-bottom: 10rpx; /* 底部填充，避免内容紧贴边框 */
}

.section-heading {
  font-size: 14rpx;
  font-weight: bold;
  color: #d94e50;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  text-align: left; /* 左对齐小标题 */
  display: block;
}

.list-item {
  font-size: 12rpx;
  color: #333;
  line-height: 1.6;
  font-weight: bold;
}

.list-sub-item {
  font-size: 10rpx;
  color: #666;
  margin-left: 15rpx; /* 缩进 */
  margin-bottom: 5rpx;
  text-align: justify;
}

.list-sub-item-tip {
  font-size: 10rpx;
  color: #a0a0a0; /* 提示文字颜色 */
  line-height: 1.4;
  margin-left: 30rpx;
  margin-bottom: 10rpx;
  font-style: italic;
}

.footer-signature {
  font-size: 11rpx;
  color: #999;
  text-align: center;
  margin-top: 5rpx;
  font-style: italic;
  display: block;
}

/* 底部按钮条 */
.bottom-bar {
  width: 100%;
  padding: 30rpx 40rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.start-game-button {
  width: 100%;
  height: 90rpx;
  border-radius: 50rpx;
  background-color: #007bff; /* 蓝色按钮 */
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.color-tile-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
}

.color-tile {
  height: 46rpx;
  width: 130rpx;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.color-text {
  font-weight: 400;
  font-size: 12rpx;
  color: #1c2023;
}

.share-button {
  background: #edbf58;
  border: hidden;
  color: white;
}

/* 可爱按钮的通用样式 */
.cute-button {
  width: 100%;
  margin-bottom: 12rpx;
  height: 38rpx; /* 稍微小一点，更显可爱 */
  border-radius: 24rpx; /* 圆角更大，更可爱 */
  font-size: 12rpx; /* 字体适中 */
  font-weight: bold;
  color: var(--text-button); /* 通常为白色 */
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.2); /* 可爱的浮动感 */
  transition: all 0.2s ease; /* 动画过渡 */
}

.cute-button:active {
  transform: translateY(2rpx); /* 按下时下沉 */
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.15); /* 阴影变浅 */
  opacity: 0.95; /* 略微透明 */
}

.cute-button .button-icon {
  margin: 0 6rpx; /* 图标与文字间距 */
  font-size: 19rpx; /* 图标大小 */
  line-height: 1;
  vertical-align: middle;
}

.retry-button {
  /* 活力绿色系渐变，给人重新开始的清新感 */
  background: linear-gradient(135deg, #a1c4fd, #c2e9fb);
  box-shadow: 0 6rpx 15rpx rgba(161, 196, 253, 0.35);
}

.camera-container {
  z-index: 1000;
  width: 100vw; /* 宽度占满屏幕 */
  position: relative; /* 必须是相对定位，如果 camera 和 overlay-content 用绝对定位的话 */
  /* height 会由 JS 动态设置 */
}

camera {
  position: absolute; /* 相对于 camera-container 定位 */
  top: 0;
  left: 0;
  width: 100%; /* 宽度填满 camera-container */
  /* height 由 JS 动态设置 */
}

.overlay-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 样式与之前全屏示例类似 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
