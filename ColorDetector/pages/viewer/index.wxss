/* pages/index/index.wxss */
.container {
  position: relative; /* 确保子元素的 z-index 生效 */
  display: flex;
  flex-direction: column;
  align-items: center;
  /* Adjust justify-content if needed, maybe remove it or set to flex-start */
  justify-content: center;
  box-sizing: border-box;
}

#imageCanvas {
  border: 1px solid #ccc;
  background-color: #f0f0f0;
  margin-bottom: 15px; /* Add space below canvas */
  z-index: 1;
}

/* <<<<<<<<<< ADDED Style for pixel info */
.overlay-container {
  background-color: 'white';
  background-color: rgb(0, 0, 0, 0.1);
  border-width: 1rpx;
  position: absolute;
  border-radius: 16rpx;
  bottom: 120rpx;
  display: flex;
  flex-direction: row;
  width: calc(100% - 24rpx);
  margin-left: 24rpx;
  margin-right: 24rpx;
  flex: 1;
  justify-content: 'center';
  align-items: 'center';
  height: 160rpx;
  z-index: 100;
}

.view-box-hover {
  background-color: rgba(185, 185, 185, 0.3);
}
