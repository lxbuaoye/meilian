<view style="margin-top: 0rpx; width: 100%; display: grid; grid-template-columns: repeat(3, 1fr); justify-items: center;">
  <view style="display: flex; flex-direction: column; align-items: center; justify-content: center;" wx:for="{{list}}" wx:key="*this">
    <text style="font-family: PingFang-SC-Bold;font-weight: 700;font-size: 50rpx;color: #2E3FA8;letter-spacing: 0;text-align: center;">
      {{item.number}}
    </text>
    <text style=" font-family: PingFang-SC-Bold;font-weight: 700;font-size: 24rpx;color: #1C2023;letter-spacing: 0;text-align: center;">
      {{item.text}}
    </text>
  </view>
</view>