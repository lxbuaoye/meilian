.container {
  position: relative;
  width: 700rpx;
  height: 800rpx;
  overflow: hidden;
  border-radius: 12rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.comparison-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 确保图片填充容器并保持比例，而不是被拉伸 */
  object-fit: contain;
}

.comparison-slider {
  position: absolute;
  top: 0;
  width: 6rpx;
  height: 100%;
  background-color: #fff;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  border: 4rpx solid #aaa;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
}
