<!--components/article-card/index.wxml-->
<view style="display: flex; flex: 1; height: 200rpx; padding: 30rpx 0; box-sizing: content-box;"
  bind:tap="openArticleDetail"
  hover-class="view-box-hover">
  <view style="display: flex; flex: 1; flex-direction: column; max-width: 402rpx;">
    <text class="title"
      style="font-size: 30rpx;color: #1C2023;">{{title}}</text>
    <text class="subtitle"
      style="margin-top:10rpx; font-weight: 400;font-size: 24rpx;color: #8F969C;">{{subtitle}}</text>
    <view style="margin-bottom: 0; margin-top: auto;">
      <text style="font-size: 24rpx;color: #8F969C;">{{date}}</text>
    </view>
  </view>
  <view style="display: flex;margin-left: 30rpx; ">
    <image style="width: 270rpx; height: 100%;border-radius: 30rpx; overflow: hidden;"
      mode="aspectFill"
      src="{{imageUrl}}"></image>
  </view>
</view>