.image-container {
  position: relative;
  width: 452rpx; /* 根据需要调整容器宽度 */
  height: 624rpx; /* 根据需要调整容器高度 */
  overflow: hidden; /* 确保模糊效果不会溢出容器 */
  border: 1px solid #ddd; /* 仅为演示边框 */
}

.active {
  display: unset;
}

.none {
  display: none;
}

/* 图片通用样式 */
.image-container img {
  position: absolute; /* 绝对定位，图片叠在一起 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片覆盖容器且不变形 */

  /* 定义过渡效果：透明度和滤镜在 0.6 秒内平滑过渡 */
  transition: opacity 0.6s ease-in-out, filter 0.6s ease-in-out;
}

.close-button-container {
  position: absolute;
  left: 50%;
  bottom: 100rpx;
  transform: translate(-50%);
}

/* 定义第一张图片模糊消失的动画 */
@keyframes imageOutBlur {
  0% {
    /* 动画开始：完全显示，清晰 */
    opacity: 1;
    filter: blur(0px);
  }
  25% {
    /* 保持显示和清晰，为过渡留出时间 */
    opacity: 1;
    filter: blur(0px);
  }
  50% {
    /* 过渡到：完全隐藏，模糊 */
    opacity: 0;
    filter: blur(10px);
  }
  75% {
    /* 保持隐藏和模糊 */
    opacity: 0;
    filter: blur(10px);
  }
  100% {
    /* 保持隐藏和模糊，准备下一个循环 */
    opacity: 0;
    filter: blur(10px);
  }
}

.shaking-animation {
  /* 应用动画 */
  animation-name: shake-horizontal; /* 动画的名称 */
  animation-duration: 0.8s; /* 动画完成一个周期的时间 */
  animation-timing-function: ease-in-out; /* 动画的速度曲线，缓入缓出 */
  animation-iteration-count: infinite; /* 动画播放次数：infinite 表示无限次循环 */
}

/* 定义左右摇摆抖动的关键帧 */
@keyframes shake-horizontal {
  0% {
    transform: translateX(0);
  } /* 初始位置 */
  10% {
    transform: translateX(-5px);
  } /* 向左移动 5px */
  20% {
    transform: translateX(5px);
  } /* 向右移动 5px */
  30% {
    transform: translateX(-5px);
  } /* 向左移动 5px */
  40% {
    transform: translateX(5px);
  } /* 向右移动 5px */
  50% {
    transform: translateX(-5px);
  } /* 向左移动 5px */
  60% {
    transform: translateX(5px);
  } /* 向右移动 5px */
  70% {
    transform: translateX(-5px);
  } /* 向左移动 5px */
  80% {
    transform: translateX(5px);
  } /* 向右移动 5px */
  90% {
    transform: translateX(-5px);
  } /* 向左移动 5px */
  100% {
    transform: translateX(0);
  } /* 回到初始位置 */
}

