/* 应用动画到你的 view 元素 */
.animated-view {
  position: fixed;
  top: 350rpx;
  left: 50rpx;
  width: 140rpx;
  height: 180rpx;
  display: flex;

  /* 动画属性 */
  animation-name: scaleUpDown; /* 动画名称 */
  animation-duration: 1s; /* 动画持续时间 */
  animation-timing-function: ease-in-out; /* 动画速度曲线 */
  animation-iteration-count: infinite; /* 无限循环 */
}

