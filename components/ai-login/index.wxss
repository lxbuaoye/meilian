.login-overlay {
  width: 100%;
  height: 100%;
  --td-overlay-bg-color: white;
}

.loading-overlay {
  --td-loading-color: var(--theme-color);
  --td-loading-text-color: var(--theme-color);
}

.icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  box-shadow: 0 0 30rpx 0 #ebedf0;
  border-radius: 50rpx;
}

.center-text {
  margin-top: 40rpx;
  font-weight: 700;
  font-size: 36rpx;
  color: #1c2023;
  text-align: center;
}

.description-text {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #1c2023;
  letter-spacing: 0;
  text-align: center;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.button::after {
  border: none;
}

.privacy {
  --td-radio-font-size: 28rpx;
  --td-radio-icon-checked-color: var(--theme-color);
  --td-radio-content-line-height: 28rpx;
  --td-radio-label-line-height: 28rpx;
}
