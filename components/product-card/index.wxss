.goods-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
}

.goods-card__main {
  background: #ffffff;
  box-shadow: 0 10px 30px 0 #0000000d;
  border-radius: 20px;
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 16rpx;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 341rpx;
  height: 341rpx;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.goods-card__thumb:empty {
  display: none;
  margin: 0;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.goods-card__body {
  display: flex;
  background: #fff;
  padding: 0rpx 20rpx 30rpx 20rpx;
  flex-direction: column;
  align-items: center;
}

.goods-card__upper {
  display: flex;
  overflow: hidden;
  align-items: center;
  margin-top: 8px;
}

.goods-card__title {
  font-size: 28rpx;
  color: #1c2023;
  font-weight: 700;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
  line-height: 40rpx;
  white-space: nowrap;
}

.goods-card__subtitle {
  flex-shrink: 0;
  font-size: 22rpx;
  color: #8f969c;
  font-weight: 400;
  display: -webkit-box;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 30rpx;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.goods-card__tag {
  color: #e34d59;
  background: transparent;
  font-size: 20rpx;
  border: 1rpx solid #fa4126;
  padding: 0 8rpx;
  border-radius: 16rpx;
  line-height: 30rpx;
  margin: 0 8rpx 8rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.goods-card__down {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: flex-start;
  align-items: baseline;
  line-height: 32rpx;
  margin: 8rpx 0 0 0;
}

.goods-card__origin-price {
  white-space: nowrap;
  font-weight: 700;
  order: 2;
  color: #bbbbbb;
  font-size: 24rpx;
  margin: 0 0 0 8rpx;
}

.goods-card__add-cart {
  order: 3;
  margin: auto 0 0 auto;
  position: absolute;
  bottom: 0;
  right: 0;
}

.spec-for-price {
  font-size: 36rpx;
  white-space: nowrap;
  font-weight: 700;
  order: 1;
  color: #e34d59;
  margin: 0;
}

.spec-for-symbol {
  font-size: 24rpx;
}

.one-line {
  max-width: 290rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
  text-overflow: ellipsis;
}

.view-box-hover {
  transform: scale(0.98, 0.98);
}
