/* components/gauge/gauge.wxss */

.gauge-card {
  /* 修改：改为 100% 以适应父容器宽度 */
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.gauge-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #4b5563;
  margin-bottom: 20rpx;
}

.canvas-wrapper {
  position: relative;
  /* 确保内部 canvas 居中 */
  display: flex;
  justify-content: center;
  align-items: flex-end; /* 底部对齐 */
}

.gauge-canvas {
  display: block;
}

.gauge-value-container {
  /* 保持绝对定位在底部 */
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  z-index: 10;
}

.gauge-value {
  font-size: 50rpx;
  font-weight: 700;
  transition: color 0.7s ease-in-out;
}
