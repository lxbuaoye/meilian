<view style="height: 300rpx; border-radius: 20rpx; overflow: hidden; position: relative; display: flex;"
  hover-class="action-tile-hover"
  bind:tap="navigateToDetail">
  <image src="{{coverImageUrl}}"
    style="width: 100%; height: 300rpx;"
    mode="aspectFill"></image>
  <view style="position: absolute;bottom: 13rpx; background: #0000004d; margin: 0 20rpx; padding:0 30rpx; height: 60rpx; display: flex; justify-content: center; align-items: center; border-radius: 20rpx;">
    <text style="color: white; font-size: 28rpx; line-height: 40rpx; font-weight: 700;">{{title}}
    </text>
  </view>
</view>
<view style=" display: flex; flex:1; margin: 20rpx 0;  align-items: center; width: 300rpx; ">
  <tag wx:for="{{tags}}"
    wx:key="index"
    text="{{item}}"></tag>
</view>