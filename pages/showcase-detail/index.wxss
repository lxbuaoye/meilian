page {
  background: #f6f9fe;
}

.page {
  min-height: 100vh;
  background: #f6f9fe;
  color: #1c2023;
  position: relative;
}

.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  width: 48rpx;
  height: 80rpx;
}

.nav-title {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}


.loading-container {
  padding: 200rpx 0;
  text-align: center;
  color: #b9b9b9;
}

.content {
  background: #ffffff;
}

.hero-section {
  width: 100%;
  padding: 24rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.hero-image {
  width: 100%;
  height: 550rpx;
  display: block;
  border-radius: 24rpx;
  overflow: hidden;
  background: #ffffff;
}

.hero-placeholder {
  width: 100%;
  height: 550rpx;
  background: #f5f7fb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-placeholder-text {
  color: #b8bec7;
  font-size: 28rpx;
}

.info-section {
  padding: 24rpx 24rpx 32rpx;
  background: #ffffff;
}

.case-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1c2023;
  margin-bottom: 16rpx;
}

.project-address-row {
  display: flex;
  align-items: center;
}

.project-address-label {
  font-size: 28rpx;
  color: #9a9a9a;
}

.project-address-value {
  font-size: 28rpx;
  color: #9a9a9a;
}

.products-section {
  padding: 0 24rpx 32rpx;
  background: #ffffff;
}

.products-title {
  display: block;
  font-size: 28rpx;
  color: #1c2023;
  margin-bottom: 24rpx;
  margin-top: 16rpx;
}

.products-scroll {
  display: flex;
  white-space: nowrap;
}

.product-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.product-item--hover {
  transform: scale(0.98);
}

.product-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 12rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.product-name {
  font-size: 24rpx;
  color: #1c2023;
  text-align: center;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-section {
  margin-top: 20rpx;
  padding: 32rpx 24rpx 40rpx;
  background: #ffffff;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.detail-icon {
  width: 40rpx;
  height: 40rpx;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.detail-text {
  display: block;
  font-size: 28rpx;
  color: #1c2023;
  line-height: 1.8;
  margin-bottom: 24rpx;
  text-indent: 2em;
}

.detail-text-image {
  width: 100%;
  margin-bottom: 32rpx;
}

.text-image {
  width: 100%;
  border-radius: 8rpx;
  display: block;
}

.detail-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.detail-image {
  width: calc(50% - 8rpx);
  height: 200rpx;
  border-radius: 8rpx;
}
