page {
  background: #f6f9fe;
}

.page {
  min-height: 100vh;
  background: #f6f9fe;
  color: #1c2023;
  position: relative;
}

.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}


.loading-container {
  padding: 200rpx 0;
  text-align: center;
  color: #b9b9b9;
}

.content {
  background: #ffffff;
}

.hero-section {
  width: 100%;
  padding: 0 24rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.hero-image {
  width: 702rpx;
  height: 549.93rpx;
  display: block;
  border-radius: 24rpx;
  overflow: hidden;
  background: #ffffff;
}

.hero-placeholder {
  width: 100%;
  height: 550rpx;
  background: #f5f7fb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-placeholder-text {
  color: #b8bec7;
  font-size: 28rpx;
}

.info-section {
  padding: 30rpx 24rpx 0;
  background: #ffffff;
}

.case-title {
  display: block;
  width: 429rpx;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 34rpx;
  color: #1C2023;
  letter-spacing: 0;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.project-address-row {
  display: flex;
  align-items: center;
}

.project-address-label {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #8F969C;
  letter-spacing: 0;
  line-height: 33rpx;
  white-space: nowrap;
}

.project-address-value {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #8F969C;
  letter-spacing: 0;
}

.products-section {
  padding: 0 24rpx 32rpx;
  background: #ffffff;
  margin-top: 20rpx;
}

.products-title {
  display: block;
  font-size: 28rpx;
  color: #1c2023;
  margin-bottom: 20rpx;
  margin-top: 0;
}

.products-scroll {
  display: flex;
  white-space: nowrap;
}

.product-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 23rpx;
  flex-shrink: 0;
}

.product-item--hover {
  transform: scale(0.98);
}

.product-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
  background: #f8f8f8;
  border: 1rpx solid #E3E4E5;
  border-radius: 10rpx;
}

.product-name {
  font-size: 24rpx;
  color: #1c2023;
  text-align: center;
  max-width: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 新的色卡卡片样式 */
.product-card {
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8rpx;
}
.product-card-image {
  width: 140rpx;
  height: 84rpx;
  border-radius: 8rpx;
  background: #f3f4f6;
  box-shadow: 0 6rpx 18rpx rgba(15,23,42,0.04);
  object-fit: cover;
}
.product-card-label {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  padding-left: 4rpx;
}
.product-card-title {
  font-size: 22rpx;
  color: #111827;
  max-width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.product-card-code {
  font-size: 20rpx;
  color: #6b7280;
}

.detail-section {
  margin-top: 20rpx;
  padding: 32rpx 24rpx 40rpx;
  background: #ffffff;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.detail-icon {
  width: 30rpx;
  height: 30rpx;
}

.detail-title {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 34rpx;
  color: #1C2023;
  letter-spacing: 0;
}

.detail-text {
  display: block;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 28rpx;
  color: #1C2023;
  letter-spacing: 0;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-indent: 0;
}

.detail-text-image {
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.text-image {
  width: 702rpx;
  height: 468rpx;
  background: #F7FAFE;
  border-radius: 20rpx;
  display: block;
}

.detail-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.detail-image {
  width: calc(50% - 8rpx);
  height: 200rpx;
  border-radius: 8rpx;
}
