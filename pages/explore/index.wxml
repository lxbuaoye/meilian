<!--pages/explore/index.wxml-->
<view style="margin: 24rpx;">
  <!-- Header -->
  <view style="display: flex; flex-direction: column; margin-bottom: 12rpx;">
    <text style="font-size: 34rpx; background: linear-gradient(to right, #f8c301, #ffb347, #ff69b4, #87cefa, #90ee90);line-height: 48rpx; -webkit-background-clip: text; ; background-clip: text; color:transparent;">智慧算法空间</text>
  </view>

  <text style="font-size: 26rpx; color: #1C2023; line-height: 48rpx;">数码彩智慧算法空间是一个持续探索未来数码色彩体验的创新实验室。空间内提供的功能和算法（包括人工智能驱动的体验）代表了我们对色彩科技的最新思考和尝试，
  </text>
  <view wx:for="{{list}}"
    wx:key="*this"
    class="border"
    hover-class="action-tile-hover"
    bind:tap="onTap"
    data-disabled="{{item.disabled}}"
    data-open-another-mini-program="{{item.openAnotherMiniProgram}}"
    data-dest="{{item.dest}}">
    <view wx:if="{{item.disabled}}"
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.65); color: white; display: flex; justify-content: center; align-items: center; font-size: 24px; ">
      <text style=" transform: rotate(-16deg); font-size: 26rpx;">即将推出</text>
    </view>
    <view style="width: 70%; display: flex; justify-content: center; flex-direction: column; align-items: center; padding-left: 68rpx; padding-right: 30rpx;">
      <text style="font-size: 32rpx; margin-bottom: 10rpx; color: #1C2023; ;">{{item.name}} </text>
      <text style="font-size: 24rpx; color: #1C2023">{{item.description}} </text>
    </view>
    <view style="width: 20%; display: flex; align-items: flex-end; flex-direction: column; margin-right: 24rpx;">
      <image src="{{item.imageSrc}}"
        style="height: 160rpx; width: 160rpx;"
        mode="aspectFit"></image>
    </view>
  </view>

</view>