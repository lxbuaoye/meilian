<view style="padding: 40rpx 24rpx 30rpx 24rpx; display: flex; flex-direction: column; background-color: white;">
  <swiper style="width: 100%; height: 550rpx;"
    indicator-color="rgba(255,255 ,255, .6)"
    indicator-active-color="var(--theme-color)"
    indicator-dots="{{containMultipleImages}}">
    <swiper-item wx:for="{{imageList}}"
      wx:key="index"
      style="display: flex; justify-content: center;">
      <image src="{{item}}"
        style="height: 550rpx;width: 100%; align-self: center;"
        mode="heightFix"
        data-index="{{index}}"
        bind:tap="previewImage"></image>
    </swiper-item>
  </swiper>
  <view style="margin-top: 30rpx;">
    <price wx:if="{{price }}"
      class="spec-for-price"
      symbol-class="spec-for-symbol"
      symbol="{{currency}}"
      price="{{price * 100}}" />
    <text wx:if="{{unit && unit.length > 0}}"
      style="font-size: 20rpx;color: #C5C8CB;"> {{unit}}</text>
  </view>
  <text style="font-weight: 700;font-size: 34rpx;color: #1C2023; margin-top: 30rpx;"> {{title}}</text>
  <view style="display: flex; margin-top: 20rpx; flex-wrap: wrap;">
    <tag wx:for="{{tags}}"
      wx:key="index"
      text="{{item}}"></tag>
  </view>
</view>

<view style="margin-top:20rpx; padding: 0 24rpx 60rpx; background-color: white;">
  <view style="height: 48rpx; width: 100%; display: flex; padding: 30rpx 0 40rpx; align-items: center;">
    <image style="height: 30rpx; width: 30rpx; margin-right: 20rpx;"
      src="/resources/bulletpoint.png"></image>
    <text style="font-size: 34rpx; font-weight: 700;">产品详情</text>
  </view>
  <view style="display: grid;  grid-template-columns: 25% 75%; padding: 10rpx 0; justify-content: center; "
    wx:for="{{instruction.data}}">
    <text style="font-weight: Bold;font-size: 30rpx;color: #1C2023;">{{item.title}}</text>
    <text style="font-size: 28rpx;color: #1C2023;">{{item.content}}</text>

  </view>
  <!-- <rich-text nodes="{{description}}"></rich-text> -->
  <!-- <text style="font-size: 28rpx;color: #1C2023;">{{description}}</text> -->
</view>