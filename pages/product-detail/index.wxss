page {
  background: #ffffff;
}

.page {
  min-height: 100vh;
  background: #ffffff;
  color: #1c2023;
  position: relative;
}

.custom-nav-bar {
  width: 750rpx;
  height: 88rpx;
  background: #FFFFFF;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-sizing: border-box;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  position: relative;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
  z-index: 1;
}

.nav-right-icons {
  display: flex;
  align-items: center;
  gap: 24rpx;
  width: 96rpx;
  justify-content: flex-end;
}

.nav-icon-more,
.nav-icon-target {
  font-size: 40rpx;
  color: #1c2023;
  line-height: 1;
}

.body {
  height: calc(100vh - 180rpx);
}

.product-image-section {
  width: 100%;
  padding: 24rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-sizing: border-box;
  background: #ffffff;
}

.product-image {
  width: 100%;
  max-width: 702rpx;
  display: block;
}

.product-info-section {
  padding: 0 24rpx;
}

.price-section {
  margin-bottom: 16rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  color: #e34d59;
  font-size: 28rpx;
  font-weight: 700;
}

.price-text {
  color: #e34d59;
  font-size: 48rpx;
  font-weight: 700;
}

.price-unit {
  color: #c5c8cb;
  font-size: 24rpx;
  margin-left: 4rpx;
}

.product-title-section {
  margin-bottom: 20rpx;
}

.product-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1c2023;
}

.tag-section {
  margin-bottom: 24rpx;
}

.tag-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  background: #f6f8fb;
  color: #b2b9c4;
  font-size: 24rpx;
  white-space: nowrap;
}

.divider-line {
  width: 100%;
  height: 1px;
  background: #edf0f5;
  margin: 24rpx 0;
}

.detail-section {
  padding: 0 24rpx 20rpx;
}

.detail-header {
  height: 80rpx;
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 8rpx;
}

.detail-bullet {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: #2e3fa8;
  flex-shrink: 0;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.detail-item {
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1c2023;
}

.detail-value {
  font-size: 30rpx;
  color: #1c2023;
  margin-top: 4rpx;
}

.bottom-gap {
  height: 180rpx;
}

.buy-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
}

.buy-button {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background: #2e3fa8 !important;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 18rpx;
  border: none;
  box-shadow: none;
}
