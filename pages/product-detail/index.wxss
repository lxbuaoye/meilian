page {
  background: #ffffff;
}

.page {
  min-height: 100vh;
  background: #ffffff;
  color: #1c2023;
  position: relative;
}

.top-bar {
  height: 120rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
}

.icon-btn {
  width: 40rpx;
  height: 40rpx;
}

.icon-placeholder {
  width: 40rpx;
  height: 40rpx;
}

.top-title {
  flex: 1;
  font-size: 34rpx;
  font-weight: 700;
  text-align: center;
}

.body {
  height: calc(100vh - 180rpx);
}

.hero-wrap {
  padding: 0 40rpx 20rpx;
  display: flex;
  justify-content: center;
}

.hero-img {
  width: 680rpx;
}

.info-section {
  padding: 0 24rpx 30rpx;
}

.tag-section {
  padding: 0 24rpx 10rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price-symbol {
  color: #e34d59;
  font-size: 30rpx;
  font-weight: 700;
}

.price-text {
  color: #e34d59;
  font-size: 52rpx;
  font-weight: 700;
}

.price-unit {
  color: #c5c8cb;
  font-size: 22rpx;
}

.price-sub {
  margin-top: 6rpx;
  color: #c5c8cb;
  font-size: 20rpx;
}

.product-title {
  margin-top: 32rpx;
  font-size: 36rpx;
  font-weight: 700;
}

.tag-scroll {
  white-space: nowrap;
}

.tag-row {
  display: inline-flex;
  gap: 14rpx;
}

.tag-item {
  min-width: 140rpx;
  height: 56rpx;
  padding: 0 20rpx;
  border-radius: 14rpx;
  background: #f6f8fb;
  color: #b2b9c4;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-divider {
  width: 750rpx;
  height: 5px;
  margin: 18rpx auto 6rpx;
  background: #edf0f5;
}

.detail-card {
  margin-top: 30rpx;
  background: #ffffff;
  padding: 0 24rpx 20rpx;
}

.detail-header {
  height: 80rpx;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.detail-bullet {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #5966c0 0%, #a8b2c5 100%);
}

.detail-title {
  font-size: 34rpx;
  font-weight: 700;
}

.detail-item {
  padding: 22rpx 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-divider {
  height: 1px;
  background: #f0f2f5;
}

.detail-label {
  font-size: 32rpx;
  font-weight: 700;
}

.detail-value {
  font-size: 30rpx;
  color: #1c2023;
}

.bottom-gap {
  height: 180rpx;
}

.buy-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 12rpx 20rpx calc(12rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.06);
}

.buy-button {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background: #2e3fa8 !important;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 18rpx;
  border: none;
  box-shadow: none;
}
