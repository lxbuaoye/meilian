page {
  background-color: #f7f8fc;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.nav-bar {
  background-color: #ffffff;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.nav-bar-inner {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.nav-left {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-dot {
  font-size: 32rpx;
  color: #111827;
  margin-right: 24rpx;
}

.nav-circle {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 2rpx solid #111827;
}

.content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.upload-panel {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.04);
}

.upload-card {
  margin-top: 16rpx;
  border-radius: 24rpx;
  background-color: #f4f6ff;
  padding: 16rpx;
}

.upload-inner {
  height: 420rpx;
  border-radius: 24rpx;
  background-color: #f9fbff;
  border: 2rpx dashed #d1d5db;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #8f969c;
}

.section {
  margin-top: 56rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-dot {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.product-scroll {
  white-space: nowrap;
}

.product-list {
  display: flex;
}

.product-item {
  width: 128rpx;
  margin-right: 16rpx;
}

.product-image-wrapper {
  position: relative;
  width: 128rpx;
  height: 128rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  justify-content: center;
  align-items: center;
  display: flex;
}

.product-bucket {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.bucket-rim {
  width: 90rpx;
  height: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(180deg, #ffffff 0%, #eef1f5 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.04);
}

.bucket-body {
  width: 80rpx;
  height: 68rpx;
  margin-top: 2rpx;
  border-radius: 0 0 22rpx 22rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f3f4f6 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 6rpx 10rpx rgba(0, 0, 0, 0.03);
}

.product-check {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  width: 56rpx;
  height: 56rpx;
}

.product-name {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #4b5563;
  text-align: center;
}

.product-item--active .product-image-wrapper {
  border: 2rpx solid #2945d9;
}

.craft-list {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: nowrap;
}

.craft-item {
  min-width: 150rpx;
  padding: 16rpx 24rpx;
  border-radius: 28rpx;
  background-color: #ffffff;
  margin-right: 16rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.craft-text {
  font-size: 24rpx;
  color: #4b5563;
}

.craft-item--active {
  background-color: #2945d9;
}

.craft-item--active .craft-text {
  color: #ffffff;
}

.footer {
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-shadow: 0 -4rpx 16rpx rgba(15, 23, 42, 0.08);
  background-color: #ffffff;
}

.primary-button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  background-color: #2945d9;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.primary-button--hover {
  opacity: 0.9;
}

button::after {
  border: none;
}


