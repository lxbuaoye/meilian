page {
  background-color: #f7f8fc;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.nav-bar {
  background-color: #ffffff;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.nav-bar-inner {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.nav-left {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-dot {
  font-size: 32rpx;
  color: #111827;
  margin-right: 24rpx;
}

.nav-circle {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 2rpx solid #111827;
}

.content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.upload-panel {
  margin-top: 16rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.04);
}

.upload-card {
  margin-top: 16rpx;
  border-radius: 24rpx;
  background-color: #f4f6ff;
  padding: 16rpx;
}

.upload-inner {
  height: 420rpx;
  border-radius: 24rpx;
  background-color: #f9fbff;
  /* 去除虚线边框 */
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 52rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  width: 182rpx;
  height: 40rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 28rpx;
  color: #8F969C;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
}

.section {
  margin-top: 56rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx; /* 产品与“产品选择”标题之间间距 30rpx */
}

.section-dot {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.product-scroll {
  white-space: nowrap;
}

.product-list {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: flex-start;
  padding-left: 24rpx; /* 第一个产品左边距 24rpx */
}

.product-item {
  width: 160rpx;
  margin-right: 20rpx; /* 产品之间间距 20rpx */
  text-align: center; /* 让下方文字以产品为中心对齐 */
}

.products-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.product-image-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx; /* 保证边框圆角完整显示 */
  justify-content: center;
  align-items: center;
  display: flex;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-sizing: border-box; /* 确保加边框后不被容器裁剪 */
}

.product-bucket {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.bucket-rim {
  width: 90rpx;
  height: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(180deg, #ffffff 0%, #eef1f5 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.04);
}

.bucket-body {
  width: 80rpx;
  height: 68rpx;
  margin-top: 2rpx;
  border-radius: 0 0 22rpx 22rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f3f4f6 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 6rpx 10rpx rgba(0, 0, 0, 0.03);
}

.product-check {
  position: absolute;
  top: 0;
  left: 0;
  width: 30rpx;
  height: 30rpx;
}

/* 选中产品时的边框样式 */
.product-item--active .product-image {
  border: 4rpx solid #2E3FA8;
  border-radius: 20rpx;
}

.product-name {
  margin-top: 20rpx; /* 上边距 20rpx */
  min-width: 72rpx;
  height: 33rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 33rpx;
  margin-left: auto;
  margin-right: auto;
  display: inline-block;
}

.product-item--active .product-image-wrapper {
  border: none;
}

.craft-list {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: nowrap;
}

.craft-item {
  width: 160rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-right: 16rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.craft-text {
  width: 72rpx;
  height: 33rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 33rpx;
}

.craft-item--active {
  background-color: #2945d9;
}

.craft-item--active .craft-text {
  color: #ffffff;
}

.footer {
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-shadow: none; /* 去除上方阴影线条 */
  background-color: #ffffff;
}

.primary-button {
  width: 702rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #2E3FA8;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.primary-button--hover {
  opacity: 0.9;
}

.primary-button-text {
  min-width: 88rpx;
  height: 42rpx;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 42rpx;
  white-space: nowrap; /* 不换行 */
  display: inline-block;
}

button::after {
  border: none;
}

/* 生成结果弹窗 */
.result-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.result-container {
  width: 700rpx;
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.result-close {
  position: absolute;
  top: 30rpx;
  /* container 宽 700rpx，图片宽 650rpx，左右各留 25rpx，此处再加 30rpx 间距贴近图片右侧 */
  right: 55rpx;
  width: 40rpx;
  height: 40rpx;
}

.result-close-icon {
  width: 40rpx;
  height: 40rpx;
  display: block;
}

.result-image-wrap {
  width: 650rpx;
  height: 975rpx;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
}

.result-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.result-panel {
  width: 650rpx;
  height: 480rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}

.result-panel-inner {
  width: 100%;
  height: 100%;
  padding: 32rpx 32rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.result-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.result-dot {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

.result-title {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 32rpx;
  color: #1C2023;
  line-height: 44rpx;
}

.result-text-row {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 26rpx;
  color: #5A5F66;
  line-height: 38rpx;
  margin-bottom: 12rpx;
}

.result-products {
  margin-top: 8rpx;
  margin-bottom: 24rpx;
  white-space: nowrap;
}

.result-product-list {
  display: flex;
  align-items: center;
}

.result-product-item {
  width: 120rpx;
  margin-right: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-product-icon {
  width: 90rpx;
  height: 90rpx;
}

.result-product-name {
  margin-top: 8rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 22rpx;
  color: #1C2023;
  line-height: 32rpx;
  white-space: nowrap; /* 使用产品文字不换行 */
  text-align: center;
}

.result-download {
  margin-top: auto;
  width: 100%;
  height: 80rpx;
  border-radius: 16rpx;
  border: 2rpx solid #2E3FA8;
  color: #2E3FA8;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 28rpx;
  text-align: center;
  line-height: 76rpx;
}

.result-download--hover {
  opacity: 0.9;
}

/* 图片预览样式 */
.image-preview-panel {
  padding: 32rpx;
}

.image-preview {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  display: block;
}

.image-actions {
  margin-top: 24rpx;
  text-align: center;
}

.action-btn {
  background: #f3f4f6;
  color: #374151;
  border: none;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 生成结果预览 */
.result-preview-panel {
  padding: 32rpx;
}

.result-preview {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  position: relative;
}

.result-actions {
  margin-top: 24rpx;
  text-align: center;
}

.save-btn {
  background: #10b981;
  color: #ffffff;
}

/* 进度条样式 */
.progress-panel {
  padding: 32rpx;
  background: #ffffff;
  margin: 32rpx;
  border-radius: 16rpx;
}

.progress-container {
  text-align: center;
  margin-bottom: 24rpx;
}

.progress-text {
  font-size: 32rpx;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e5e7eb;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10b981, #34d399);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-percent {
  font-size: 28rpx;
  color: #6b7280;
}

.cancel-btn {
  width: 100%;
  background: #ef4444;
  color: #ffffff;
  border: none;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
}

/* 产品样式更新 */
.product-code {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.loading-text {
  text-align: center;
  padding: 40rpx;
  color: #6b7280;
  font-size: 28rpx;
}

/* 自定义选项样式 */
.custom-options {
  padding: 32rpx;
}

/* 更多色卡按钮 */
.more-cards-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}
.more-cards-btn {
  background: #eef2ff;
  color: #2e3fa8;
  border: none;
  padding: 18rpx 36rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

/* 更多色卡弹窗 */
.more-modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
}
.more-modal {
  width: 100%;
  background: #ffffff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  max-height: 60vh;
}
.more-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}
.more-modal-title {
  font-size: 32rpx;
  color: #111827;
  font-weight: 700;
}
.more-modal-close {
  background: transparent;
  color: #6b7280;
  border: none;
}
.more-modal-scroll {
  width: 100%;
}
.more-modal-list {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
}
.more-modal-item {
  width: 32%;
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.more-modal-image {
  width: 100%;
  height: 140rpx;
  border-radius: 8rpx;
  background: #f3f4f6;
  object-fit: cover;
}
.more-modal-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #374151;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Inline 网格式更多色卡（放在产品下面） */
.more-grid {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
}
.more-grid-inner {
  width: 100%;
  max-width: 820rpx;
  background: transparent;
}
.more-grid-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 0 24rpx;
}
.more-grid-title {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
}
.more-grid-close {
  background: transparent;
  border: none;
  color: #6b7280;
}
.more-grid-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
  padding: 0 24rpx 24rpx 24rpx;
}
.more-grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.more-grid-image {
  width: 220rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f3f4f6;
  object-fit: cover;
}
.more-grid-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #374151;
  text-align: center;
  word-break: break-word;
}