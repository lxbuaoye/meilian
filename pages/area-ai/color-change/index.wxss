page {
  background-color: #f7f8fc;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.nav-bar {
  background-color: #ffffff;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
}

.nav-bar-inner {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.nav-left {
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.nav-back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.nav-right {
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-dot {
  font-size: 32rpx;
  color: #111827;
  margin-right: 24rpx;
}

.nav-circle {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
  border: 2rpx solid #111827;
}

.content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

.upload-panel {
  margin-top: 16rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.04);
}

.upload-card {
  margin-top: 16rpx;
  border-radius: 24rpx;
  background-color: #f4f6ff;
  padding: 16rpx;
}

.upload-inner {
  height: 420rpx;
  border-radius: 24rpx;
  background-color: #f9fbff;
  /* 去除虚线边框 */
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 52rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  width: 182rpx;
  height: 40rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 28rpx;
  color: #8F969C;
  letter-spacing: 0;
  text-align: center;
  line-height: 40rpx;
}

.section {
  margin-top: 56rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx; /* 产品与“产品选择”标题之间间距 30rpx */
}

.section-dot {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.product-scroll {
  white-space: nowrap;
}

.product-list {
  display: flex;
  padding-left: 24rpx; /* 第一个产品左边距 24rpx */
}

.product-item {
  width: 160rpx;
  margin-right: 20rpx; /* 产品之间间距 20rpx */
  text-align: center; /* 让下方文字以产品为中心对齐 */
}

.product-image-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx; /* 保证边框圆角完整显示 */
  justify-content: center;
  align-items: center;
  display: flex;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-sizing: border-box; /* 确保加边框后不被容器裁剪 */
}

.product-bucket {
  width: 90rpx;
  height: 90rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.bucket-rim {
  width: 90rpx;
  height: 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(180deg, #ffffff 0%, #eef1f5 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.04);
}

.bucket-body {
  width: 80rpx;
  height: 68rpx;
  margin-top: 2rpx;
  border-radius: 0 0 22rpx 22rpx;
  background: linear-gradient(180deg, #ffffff 0%, #f3f4f6 100%);
  border: 2rpx solid #e4e7ec;
  box-shadow: inset 0 6rpx 10rpx rgba(0, 0, 0, 0.03);
}

.product-check {
  position: absolute;
  top: 0;
  left: 0;
  width: 30rpx;
  height: 30rpx;
}

/* 选中产品时的边框样式 */
.product-item--active .product-image {
  border: 4rpx solid #2E3FA8;
  border-radius: 20rpx;
}

.product-name {
  margin-top: 20rpx; /* 上边距 20rpx */
  min-width: 72rpx;
  height: 33rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 33rpx;
  margin-left: auto;
  margin-right: auto;
  display: inline-block;
}

.product-item--active .product-image-wrapper {
  border: none;
}

.craft-list {
  margin-top: 8rpx;
  display: flex;
  flex-wrap: nowrap;
}

.craft-item {
  width: 160rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin-right: 16rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.craft-text {
  width: 72rpx;
  height: 33rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 33rpx;
}

.craft-item--active {
  background-color: #2945d9;
}

.craft-item--active .craft-text {
  color: #ffffff;
}

.footer {
  padding: 16rpx 24rpx calc(env(safe-area-inset-bottom) + 32rpx);
  box-shadow: none; /* 去除上方阴影线条 */
  background-color: #ffffff;
}

.primary-button {
  width: 702rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #2E3FA8;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

.primary-button--hover {
  opacity: 0.9;
}

.primary-button-text {
  min-width: 88rpx;
  height: 42rpx;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 42rpx;
  white-space: nowrap; /* 不换行 */
  display: inline-block;
}

button::after {
  border: none;
}


