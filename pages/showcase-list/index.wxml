<view class="showcase-list-page">
  <!-- 自定义导航栏 -->
  <view class="nav-bar">
    <view class="nav-content">
      <view class="nav-back" bindtap="onBack">
        <image src="{{backIcon}}" class="back-icon" mode="aspectFit"></image>
      </view>
      <text class="nav-title">案例列表</text>
    </view>
  </view>

  <!-- Tabs -->
  <t-tabs defaultValue="{{0}}" t-class="custom-tabs" class="tab" bind:change="onTabsChange" t-class-content="custom-panel">
    <t-tab-panel wx:for="{{categoryList}}" wx:key="index" label="{{item}}" value="{{index}}">
      <view class="showcase-list">
        <block wx:for="{{showcaseMap[item]}}" wx:key="_id" wx:for-item="it">
          <view class="showcase-row" hover-class="action-tile-hover" bindtap="onShowcaseClick" data-id="{{it._id}}">
            <view class="showcase-left">
              <image src="{{it.tpdz || it.coverImageUrl}}" mode="aspectFill" class="showcase-left-img" />
            </view>
            <view class="showcase-right">
              <text class="showcase-right-title">{{it.name || it.title}}</text>
            </view>
          </view>
        </block>
      </view>
    </t-tab-panel>
  </t-tabs>
</view>
