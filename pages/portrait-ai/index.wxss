page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background-color: #f7fafe;
}

.small-font {
  font-weight: 400;
  font-size: 28rpx;
  color: #1c2023;
  --td-radio-font-size: 24rpx;
}

.button::after {
  border: none;
}

.description {
  font-weight: 400;
  font-size: 24rpx;
  color: #8f969c;
}

/* 容器基础样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 80vh;
  box-sizing: content-box;
  width: 100%;
}

/* 滚动视图，包含所有说明内容 */
.intro-scroll-view {
  flex: 1; /* 占据除底部按钮外所有空间 */
  width: 100%;
  padding: 24rpx 0; /* 内部内容左右不贴边，上下留白 */
  box-sizing: border-box;
}

/* 说明内容包裹层，用于设置左右内边距 */
.intro-content {
  padding: 0 40rpx; /* 左右内边距 */
  display: flex;
  flex-direction: column;
  background-color: #fff; /* 内容背景为白色 */
  border-radius: 20rpx;
  margin: 0 24rpx; /* 容器左右外边距，形成居中效果 */
  padding-bottom: 40rpx; /* 底部填充，避免内容紧贴边框 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

/* 标题样式 */
.main-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #d94e50; /* 数码彩主题色 */
  margin-top: 40rpx;
  margin-bottom: 10rpx;
  text-align: center;
  display: block;
}

.sub-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
  display: block;
}

.highlight-text {
  font-size: 30rpx;
  color: #007bff; /* 突出显示文字 */
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  display: block;
}

/* 段落和列表样式 */
.paragraph {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 20rpx;
  text-align: justify;
}

.section-heading {
  font-size: 32rpx;
  font-weight: bold;
  color: #d94e50;
  margin-top: 40rpx;
  margin-bottom: 15rpx;
  text-align: left; /* 左对齐小标题 */
  display: block;
}

.list-item {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-top: 15rpx;
  font-weight: bold;
}

.list-sub-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-left: 30rpx; /* 缩进 */
  margin-bottom: 5rpx;
  text-align: justify;
}

.list-sub-item-tip {
  font-size: 24rpx;
  color: #a0a0a0; /* 提示文字颜色 */
  line-height: 1.4;
  margin-left: 30rpx;
  margin-bottom: 10rpx;
  font-style: italic;
}

.footer-signature {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 40rpx;
  font-style: italic;
  display: block;
}

/* 底部按钮条 */
.bottom-bar {
  width: 100%;
  padding: 30rpx 40rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.start-game-button {
  width: 100%;
  height: 90rpx;
  border-radius: 50rpx;
  background-color: #007bff; /* 蓝色按钮 */
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.color-tile-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
}

.color-tile {
  height: 90rpx;
  width: 100%;
  border-radius: 10px;
  margin-bottom: 10rpx;
}

.color-text {
  font-weight: 400;
  font-size: 24rpx;
  color: #1c2023;
}

.share-button {
  background: #edbf58;
  border: hidden;
  color: white;
}

/* 可爱按钮的通用样式 */
.cute-button {
  width: 100%;
  margin-bottom: 24rpx;
  height: 96rpx; /* 稍微小一点，更显可爱 */
  border-radius: 48rpx; /* 圆角更大，更可爱 */
  font-size: 30rpx; /* 字体适中 */
  font-weight: bold;
  color: var(--text-button); /* 通常为白色 */
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.2); /* 可爱的浮动感 */
  transition: all 0.2s ease; /* 动画过渡 */
}

.cute-button:active {
  transform: translateY(2rpx); /* 按下时下沉 */
  box-shadow: 0 3rpx 8rpx rgba(0, 0, 0, 0.15); /* 阴影变浅 */
  opacity: 0.95; /* 略微透明 */
}

.cute-button .button-icon {
  margin: 0 12rpx; /* 图标与文字间距 */
  font-size: 38rpx; /* 图标大小 */
  line-height: 1;
  vertical-align: middle;
}

/* 按钮的专属颜色和渐变 */
.share-to-friend-btn {
  /* 可爱粉色系渐变，适合分享给朋友的温馨感 */
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  box-shadow: 0 6rpx 15rpx rgba(255, 154, 158, 0.3);
}

.share-to-timeline-btn {
  /* 活泼明亮的橘黄到橙色渐变，适合朋友圈的活力 */
  background: linear-gradient(135deg, #ffc371, #ff5f6d);
  box-shadow: 0 6rpx 15rpx rgba(255, 195, 113, 0.3);
}

.retry-button {
  /* 活力绿色系渐变，给人重新开始的清新感 */
  background: linear-gradient(135deg, #a1c4fd, #c2e9fb);
  box-shadow: 0 6rpx 15rpx rgba(161, 196, 253, 0.35);
}

/* Overlay 容器 */
.share-guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* 半透明黑色背景 */
  z-index: 9999; /* 确保在最上层 */
}

/* 引导内容区域 */
.guide-content {
  position: absolute;
  top: 10rpx; /* 根据实际右上角图标位置调整 */
  right: 86rpx; /* 根据实际右上角图标位置调整 */
  display: flex;
  flex-direction: column;
  align-items: flex-end; /* 让箭头和文字靠右对齐 */
}

/* 箭头图标 */
.arrow-icon {
  color: var(--theme-color);
  animation: moveUpDown 0.7s ease-in-out infinite alternate;
}

/* 提示文字 */
.guide-text {
  color: #fff;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  max-width: 500rpx; /* 限制文字宽度 */
  text-align: right; /* 文字右对齐 */
}

/* 定义动画的关键帧 */
@keyframes moveUpDown {
  0% {
    transform: translateY(0); /* 初始位置：不偏移 */
  }
  100% {
    transform: translateY(-10px); /* 结束位置：向上移动 50px */
  }
}
