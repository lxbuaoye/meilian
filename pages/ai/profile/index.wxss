/* pages/ai/profile/index.wxss */
.page-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}


.content-scroll {
  flex: 1;
  box-sizing: border-box;
  padding-bottom: calc(100rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* Brand Header */
.brand-header {
  position: relative;
  width: 100%;
  /* 通过内边距保证图片与页面两侧距离为 24rpx，优先于图片自身宽度调整 */
  padding: 0 24rpx;
  box-sizing: border-box;
}

.brand-banner {
  display: block;
  width: 100%;
  height: auto;
  margin: 0;
  box-sizing: border-box;
  border-radius: 12rpx; /* 保持视觉一致性（可根据需要调整或移除） */
}

.brand-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: flex-end;
}

.brand-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
}

/* Section */
.section {
  padding: 30rpx 30rpx;
  background-color: #ffffff;
}

.section-header {
  display: flex;
  flex-direction: column;
  
}

.section-title-en {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.section-title-cn {
  font-size: 40rpx;
  font-weight: 700;
  color: #1C2023;
}

/* About Us */
.about-content {
  display: flex;
  flex-direction: column;
}

.about-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333333;
  margin-bottom: 40rpx;
}


/* Corporate Culture */
.culture-card {
  position: relative;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.culture-image {
  width: 100%;
  border-radius: 20rpx;
  margin-bottom: 0;
  display: block;
}

.culture-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 36rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.culture-header {
  display: flex;
  flex-direction: column;
}

.culture-title-en {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

.culture-title-cn {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
}

.culture-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.culture-line {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.culture-line-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
}

.culture-line-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
}

.mission-item,
.vision-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  gap: 18rpx;
  padding: 0;
}

.mission-title,
.vision-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 0;
  width: 160rpx;
  flex: 0 0 160rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
}

.mission-text,
.vision-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
  flex: 1;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
}

/* Brand Concept */
.concept-content {
  display: flex;
  flex-direction: column;
}

.concept-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333333;
  margin-bottom: 30rpx;
}

.concept-image {
  width: 100%;
  border-radius: 20rpx;
}

/* Honor Qualification */
.honor-container {
  position: relative;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
}

.honor-bg {
  width: 100%;
  display: block;
}

.honor-swiper-wrap {
  position: absolute;
  left: 0;
  right: 0;
  top: 80rpx;
}

.honor-swiper {
  height: 460rpx;
}

.honor-slide {
  width: 100%;
  height: 460rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.honor-cert {
  width: 340rpx;
  height: 420rpx;
  transform: scale(0.82);
  opacity: 0.6;
  transition: transform 300ms ease, opacity 300ms ease;
}

.honor-cert.active {
  transform: scale(1);
  opacity: 1;
}

.honor-cert.inactive {
  transform: scale(0.82);
  opacity: 0.6;
}

.honor-desc {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 160rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1C2023;
  font-weight: 500;
}

.honor-nav {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 70rpx;
  display: flex;
  justify-content: center;
  gap: 120rpx;
}

.honor-nav-btn {
  width: 56rpx;
  height: 56rpx;
}

.honor-preview-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
}

.honor-preview-body {
  width: 680rpx;
  height: 920rpx;
}

.honor-preview-swiper {
  width: 100%;
  height: 100%;
}

.honor-preview-item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.honor-preview-image {
  width: 100%;
  height: 100%;
}

.honor-preview-close {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  font-size: 44rpx;
  line-height: 56rpx;
  text-align: center;
}

/* Patents Section */
.patents-section {
  padding: 0;
  background-color: #1C2023;
}

.patents-bg {
  position: relative;
  width: 100%;
}

.patents-image {
  width: 100%;
  display: block;
  opacity: 0.3;
}

.patents-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.patents-navigator {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 24rpx;
}

.patents-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 30rpx;
  text-align: center;
}

.patents-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #ffffff;
  text-align: center;
}

/* Contact Us */
.contact-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.contact-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color: #F7FAFE;
  border-radius: 10rpx;
}

.contact-phone {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.contact-left {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.contact-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C2023;
  margin-bottom: 15rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.phone-icon {
  width: 44rpx;
  height: 44rpx;
}

.phone-icon-wrap {
  width: 84rpx;
  height: 84rpx;
  border-radius: 42rpx;
  background-color: #2E3FA8;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.qr-codes {
  display: flex;
  gap: 31rpx;
  margin-top: 20rpx;
  justify-content: center;
  width: 100%;
}

.qr-code {
  width: 274rpx;
  height: 274rpx;
}

.contact-qr {
  width: 702rpx;
  height: 418rpx;
  max-width: 100%;
  box-sizing: border-box;
  margin-left: auto;
  margin-right: auto;
}

.contact-qr .contact-label {
  margin-bottom: 12rpx;
}

.contact-qr .qr-codes {
  margin-top: 8rpx;
  justify-content: space-between;
}
