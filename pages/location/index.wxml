<view class="page-container">
  <!-- Navigation bar -->
  <view class="nav-bar" style="padding-top: {{menuBarTop}}px; height: {{menuBarHeight}}px;">
    <view class="nav-content">
      <image src="/resources/logo1.png" style="width: 253rpx; height: 38rpx;" mode="scaleToFill"></image>
    </view>
  </view>

  <!-- Main Content -->
  <scroll-view class="content-scroll" style="margin-top: {{menuBarTop + menuBarHeight}}px;" scroll-y>
    <!-- Main Image Container with Overlay Content -->
    <view class="image-container">
      <image class="main-image" src="/image/v3.0_store_appointment_assets/store_appointment_pic@2x.png" mode="widthFix"></image>
      
      <!-- All Content Overlay on Image (Red Line Area) -->
      <view class="content-overlay">
        <view class="info-card-group">
          <view class="info-card-item">
            <view class="card-content">
              <view class="card-text">
                <text class="card-title">行业新高度</text>
                <text class="card-subtitle">耗时20年打造成优质品牌</text>
              </view>
              <image class="top1-badge" src="/image/v3.0_store_appointment_assets/industry_new_height_pic@2x.png" mode="aspectFit"></image>
            </view>
          </view>

          <view class="info-divider"></view>

          <view class="info-card-item">
            <view class="card-content">
              <view class="card-text">
                <text class="card-title">品质新高度</text>
                <text class="card-subtitle">品牌品质研发成本 TOP1 款</text>
              </view>
              <image class="top1-badge" src="/image/v3.0_store_appointment_assets/industry_new_height_pic@2x.png" mode="aspectFit"></image>
            </view>
          </view>
        </view>

        <!-- Booking Form -->
        <view class="form-card">
          <!-- Phone Input -->
          <view class="input-container">
            <input 
              class="phone-input" 
              type="number" 
              placeholder="*请输入您的电话号码(已加密)"
              value="{{phoneNumber}}"
              bindinput="onPhoneInput"
              maxlength="11"
            />
          </view>

          <!-- Book Now Button -->
          <button class="book-button" bindtap="onBookNow" hover-class="button-hover">
            立即预约
          </button>

          <!-- Service Buttons -->
          <view class="service-buttons">
            <button class="service-button" bindtap="onOnlineService" hover-class="button-hover">
              <image class="service-icon" src="/image/v3.0_store_appointment_assets/phone@2x.png" mode="aspectFit"></image>
              <text class="service-text">在线客服</text>
            </button>
            <button class="service-button" bindtap="onPhoneConsult" hover-class="button-hover">
              <image class="service-icon" src="/image/v3.0_store_appointment_assets/phone@2x_1.png" mode="aspectFit"></image>
              <text class="service-text">电话咨询</text>
            </button>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
