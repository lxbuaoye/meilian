.page-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}


.content-scroll {
  flex: 1;
}

/* Fixed tabs under nav */
.tabs-fixed {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 4000;
  background:#ffffff;
  height: 100rpx;
}
.tabs-scroll {
  width: 100%;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}
.image-swiper {
  width: 100%;
  display: block;
}
.swipe-image {
  width: 100%;
  display: block;
}

/* vertical images list */
.images-vertical {
  display: flex;
  flex-direction: column;
  gap: 0;
}
.image-item {
  width: 100%;
  box-sizing: border-box;
}

/* Bottom fixed action bar */
.bottom-fixed {
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  width: 750rpx;
  height: 120rpx;
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 12rpx;
  bottom: 175rpx;
}
.bottom-inner {
  width: 750rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.free-book {
  width: 604rpx;
  height: 90rpx;
  background: #2E3FA8;
  color: #fff;
  border-radius: 20rpx;
  font-size: 34rpx;
  border: none;
  position: relative;
  left: 78rpx;
}
.share{
  height: 84rpx;
  width: 48rpx;
  position: relative;
  right: 658rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.share-btn {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 9rpx;
}
.share-text{
  width: 48rpx;
  height: 33rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 24rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
}
.image-container {
  position: relative;
  width: 100%;
}

.main-image {
  width: 100%;
  display: block;
}

/* Modal styles */
.modal-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 5000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-body {
  width: 702rpx;
  height: 1198rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.modal-header {
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-title {
  height: 45rpx;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 32rpx;
  color: #1C2023;
  letter-spacing: 0;
  text-align: center;
}
.modal-content {
  flex: 1;
  overflow: hidden;
  margin-top: 20rpx;
}
  .form-row {
    margin-bottom: 30rpx;
    height: 120rpx;
    width: 642rpx;
    background: #F7FAFE;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    gap: 12rpx;
    box-sizing: border-box;
    padding: 0 16rpx;
  }
  .label {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 200rpx;
    height: 120rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
  }
  .input {
    flex: 1;
    width: auto;
    height: 120rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    background: #F5F7FA;
    border-radius: 12rpx;
  }
.row-with-btn {
  display: flex;
  gap: 12rpx;
}
.choose-btn {
  width: 150rpx;
  height: 84rpx;
  border-radius: 12rpx;
  background: #2E3FA8;
  color: #fff;
  font-size: 28rpx;
  border: none;
}
.projects {
  display: flex;
  gap: 16rpx;
  flex-wrap: nowrap;
  align-items: center;
  background: #F7FAFE;
  padding: 10rpx;
  border-radius: 22rpx;
  width: 100%;
  box-sizing: border-box;
}
.project-item {
  padding: 12rpx 28rpx;
  border-radius: 18rpx;
  background: transparent;
  font-size: 28rpx;
  color: #9B9B9B;
  box-sizing: border-box;
}
.project-item.selected {
  background: #FFFFFF;
  color: #2E3FA8;
  box-shadow: 0 8rpx 20rpx rgba(46,63,168,0.12);
}
.modal-actions {
  display: flex;
  gap: 22rpx;
  margin-top: 20rpx;
}
.modal-btn {
  width: 310rpx;
  height: 90rpx;
  border: 1rpx solid #2E3FA8;
  border-radius: 20rpx;
}
.modal-btn.cancel {
  background: #F5F7FA;
  color: #2E3FA8;
  border: none;
}
.modal-btn.submit {
  background: #2E3FA8;
  color: #fff;
  border: none;
}

.content-overlay {
  position: absolute;
  /* move overlay upward to align with arrow position on image */
  bottom: calc(160rpx + constant(safe-area-inset-bottom));
  bottom: calc(160rpx + env(safe-area-inset-bottom));
  left: 48rpx;
  right: 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: 16rpx;
  pointer-events: none;
}

.info-card-group {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 16rpx;
  width: 100%;
  pointer-events: auto;
  overflow: hidden;
}

.info-card-item {
  padding: 0;
}

.info-card-item + .info-card-item {
  padding-top: 24rpx;
}

.info-divider {
  height: 2rpx;
  background-color: #E6E6E6;
  margin: 24rpx 0;
}

.info-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  pointer-events: auto;
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C2023;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666666;
}

.top1-badge {
  width: 180rpx;
  height: 72rpx;
  margin-left: 12rpx;
}

.form-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  pointer-events: auto;
}

.input-container {
  margin-bottom: 16rpx;
}

.name-input {
  width: 100%;
  height: 76rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #1C2023;
  box-sizing: border-box;
}

.name-input::placeholder {
  color: #999999;
}

.phone-input {
  width: 100%;
  height: 76rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #1C2023;
  box-sizing: border-box;
}

.phone-input::placeholder {
  color: #999999;
}

.book-button {
  width: 100%;
  height: 76rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-hover {
  opacity: 0.8;
}

.service-buttons {
  display: flex;
  gap: 20rpx;
}

.service-buttons.single {
  display: block;
}

.service-button {
  flex: 1;
  height: 72rpx;
  background-color: #ffffff;
  border: 1px solid #2E3FA8;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 0;
}

.service-button.full-width {
  width: 100%;
  box-sizing: border-box;
  margin-top: 0;
  display: flex;
  justify-content: center;
}

.service-icon {
  width: 32rpx;
  height: 32rpx;
}

.service-text {
  font-size: 24rpx;
  color: #2E3FA8;
}

/* Tabs (styled like pages/recommend) */
.tabs-scroll {
  width: 100%;
  overflow: hidden;
}
.tabs {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: transparent;
  box-shadow: 0 1px 0 rgba(0,0,0,0.04);
}
.tab-card {
  width: 250rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  position: relative;
  box-sizing: border-box;
  flex: 0 0 250rpx;
  overflow: hidden;
}
.projects-bar {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 8rpx;
  box-sizing: border-box;
}
.projects-inner {
  width: 642rpx;
  height: 100rpx;
  background: #F7FAFE;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 10rpx;
  gap: 12rpx;
  box-sizing: border-box;
}
.page-project-item {
  padding: 12rpx 20rpx;
  border-radius: 18rpx;
  background: transparent;
  font-size: 28rpx;
  color: #9B9B9B;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 207.33rpx;
  height: 80rpx;
  box-sizing: border-box;
  transition: all 160ms ease;
}
.page-project-item.selected {
  width: 207.33rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  color: #2E3FA8;
  box-shadow: 0 8rpx 20rpx rgba(46,63,168,0.12);
}
.tab-card.active .tab-caption {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 30rpx;
  color: #2E3FA8;
  letter-spacing: 0;
  text-align: center;
}
.tab-caption {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 28rpx;
  color:#1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 100rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  padding: 0 12rpx;
  box-sizing: border-box;
}
.tab-indicator {
  position: absolute;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  border-radius: 3rpx;
  background: #2E3FA8;
  display: none !important;
}
