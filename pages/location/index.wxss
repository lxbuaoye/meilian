.page-container {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.logo {
  height: 44rpx;
  width: 300rpx;
}

.content-scroll {
  flex: 1;
}

.image-container {
  position: relative;
  width: 100%;
}

.main-image {
  width: 100%;
  display: block;
}

.content-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: 20rpx;
  pointer-events: none;
}

.info-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  pointer-events: auto;
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-text {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1C2023;
  margin-bottom: 10rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666666;
}

.top1-badge {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
}

.form-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  pointer-events: auto;
}

.input-container {
  margin-bottom: 30rpx;
}

.phone-input {
  width: 100%;
  height: 88rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #1C2023;
  box-sizing: border-box;
}

.phone-input::placeholder {
  color: #999999;
}

.book-button {
  width: 100%;
  height: 88rpx;
  background-color: #007AFF;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-hover {
  opacity: 0.8;
}

.service-buttons {
  display: flex;
  gap: 20rpx;
}

.service-button {
  flex: 1;
  height: 80rpx;
  background-color: #ffffff;
  border: 1px solid #E5E5E5;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 0;
}

.service-icon {
  width: 32rpx;
  height: 32rpx;
}

.service-text {
  font-size: 24rpx;
  color: #1C2023;
}
