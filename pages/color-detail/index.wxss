page {
  background: #f6f9fe;
}

.page {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 导航栏样式（从 showcase-detail 复用） */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  width: 48rpx;
  height: 80rpx;
}

.nav-title {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}

.content {
  background: #f6f9fe;
  padding: 24rpx 24rpx 40rpx;
  padding-top: calc(100rpx + env(safe-area-inset-top));
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.color-card {
  padding-bottom: 24rpx;
}

.color-image {
  width: 100%;
  height: 420rpx;
  display: block;
}

.color-info {
  padding: 24rpx 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.color-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1c2023;
}

.color-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.icon-button {
  padding: 0;
  margin: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f5f7fb;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.icon-button::after {
  border: none;
}

.icon-button--active {
  background: #e8ecf5;
}

.icon-image {
  width: 40rpx;
  height: 40rpx;
}

.section {
  margin-top: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-dot {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #5966c0 0%, #a8b2c5 100%);
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1c2023;
}

.case-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.case-card {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
}

.case-image {
  width: 100%;
  height: 260rpx;
  display: block;
}

.case-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.case-name {
  font-size: 28rpx;
  color: #ffffff;
}


