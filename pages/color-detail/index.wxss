page {
  background: #f6f9fe;
}

.page {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 导航栏样式（从 showcase-detail 复用） */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}

.content {
  background: #f6f9fe;
  padding: 24rpx 24rpx 40rpx;
  padding-top: 0; /* 由 JS 动态设置 */
  box-sizing: border-box;
  height: 100vh;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.color-card {
  width: 702rpx;
  height: 556rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  padding: 36rpx 30rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}

.color-image {
  width: 702rpx;
  height: 420rpx;
  display: block;
  margin: 0;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
}

.color-swatch {
  width: 702rpx;
  height: 420rpx;
  border-radius: 20rpx;
  display: block;
  margin: 0;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  box-shadow: inset 0 0 0 1px rgba(0,0,0,0.03);
}

.color-meta {
  margin-top: 8rpx;
}
.color-code {
  font-size: 24rpx;
  color: #6b7280;
  margin-right: 12rpx;
}

.color-info {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.color-name {
  /* 使用弹性布局：尽可能展示名称，靠近右侧操作按钮时才省略 */
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 34rpx;
  color: #1C2023;
  letter-spacing: 0;
  line-height: 48rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  display: block;
  flex: 1 1 auto;
  min-width: 0; /* 允许在 flex 布局下正确触发溢出 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
}

.color-actions {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.icon-button {
  padding: 0;
  margin: 0;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background: #F7FAFE;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.icon-button::after {
  border: none;
}

.icon-button--active {
  background: #e8ecf5;
}

.icon-image {
  width: 30rpx;
  height: 30rpx;
}

.section {
  margin-top: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-dot {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #5966c0 0%, #a8b2c5 100%);
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1c2023;
}

.case-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.case-card {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
}

.case-image {
  width: 100%;
  height: 260rpx;
  display: block;
}

.case-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
}

.case-name {
  font-size: 28rpx;
  color: #ffffff;
}


