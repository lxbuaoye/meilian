.home-loading-wrap {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
}
.loading-center {
  text-align: center;
  color: #b9b9b9;
}

/* New home layout styles */
.home-main {
  padding: 16rpx 24rpx 40rpx;
  background: #ffffff;
}
.hero-row {
  display: flex;
  gap: 22rpx;
  justify-content: space-between;
  margin-top: 40rpx;
}
.hero-card {
  width: 340rpx;
  height: 380rpx;
  overflow: hidden;
  position: relative;
}
.hero-img {
  width: 100%;
  height: 100%;
  display: block;
}
.hero-label {
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  width: 320rpx;
  height: 80rpx;
  border-radius: 46rpx;
  overflow: visible;
}
.hero-label-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(45,45,45,0.2);
  border-radius: 46rpx;
  -webkit-backdrop-filter: blur(6rpx);
  backdrop-filter: blur(6rpx);
  filter: blur(3rpx);
  z-index: 1;
}
.hero-label-text {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  z-index: 3;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.circle-arrow {
  margin-left: 8rpx;
}
.section-header {
  width: 702rpx;
  height: 140rpx;
  background: #FFFFFF;
  box-shadow: 0 0 20rpx 0 #E3E4E5;
  border-radius: 20rpx;
  margin-top: 40rpx;
}
.section-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 50rpx;
  left: 50rpx;
}
.section-title {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 34rpx;
  color: #1C2023;
  letter-spacing: 0;
  flex: 1;
  position: relative;
  left:60rpx;
  top: 46rpx;
}
.section-toggle {
  font-size: 34rpx;
}
.category-row {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  justify-content: space-between;
}
.category-card{
  width: 220rpx;
  height: 290rpx;
  position: relative; /* enable absolute positioning of label inside the card */
  overflow: visible;
  border-radius: 18rpx;
}
.category-img{
  width: 220rpx;
  height: 290rpx;
  display: block;

}
.category-label{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  width: 200rpx;
  height: 70rpx;
  border-radius: 46rpx;
  overflow: visible;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}
.category-label-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #2d2d2d33;
  border-radius: 46rpx;
  -webkit-backdrop-filter: blur(6rpx);
  backdrop-filter: blur(6rpx);
  filter: blur(3rpx);
  z-index: 1;
}
.category-label-text{
  position: relative;
  z-index: 2;
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  width: 100%;
}
.hero-label-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 46rpx;
  border: 1rpx solid #FFFFFF;
  z-index: 2;
  pointer-events: none;
}
.jt{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 4;
}
.ai{
  width: 702rpx;
  height: 220rpx;
  margin-top: 40rpx;
  position: relative;
  overflow: hidden;
}
.ai-img{
width: 702rpx;
height: 220rpx;
z-index: 0;
}
.ai-text{
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 42rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
  overflow: hidden;
}