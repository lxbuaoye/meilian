.home-loading-wrap {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
}
.loading-center {
  text-align: center;
  color: #b9b9b9;
}

/* New home layout styles */
.home-main {
  width: 750rpx;
  height: 1624rpx;
  background: #C7C1B5;
  padding: 0 24rpx 0 24rpx;
}
.hero-row {
  display: flex;
  gap: 22rpx;
  padding-top: 40rpx;
}
.hero-card {
  width: 340rpx;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}
.hero-img {
  width: 100%;
  height: 100%;
  display: block;
  position: relative;
  z-index: 0;
  border-radius: 30rpx;
}
.hero-shadow {
  position: absolute;
  top: 0;
  left: 0;
  width: 340rpx;
  height: 400rpx;
  background: #000000;
  opacity: 0.3;
  border-radius: 30rpx;
  z-index: 1;
  pointer-events: none;
}
.hero-label-text {
  position: absolute;
  left: 70rpx;
  top: 130rpx;
  z-index: 3;
  width: 200rpx;
  height: 140rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 900;
  font-size: 50rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}
.circle-arrow {
  margin-left: 8rpx;
}
.section-header {
  width: 702rpx;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 70rpx;
  margin-top: 40rpx;
  position: relative;
}
.section-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 50rpx;
  left: 50rpx;
}
.section-title {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 34rpx;
  color: #1C2023;
  letter-spacing: 0;
  flex: 1;
  position: relative;
  left:60rpx;
  top: 46rpx;
}
.section-toggle {
  font-size: 34rpx;
}
.category-row {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}
.category-card{
  width: 220rpx;
  height: 290rpx;
  position: relative; /* enable absolute positioning of label inside the card */
  overflow: visible;
  border-radius: 18rpx;
}
.category-img{
  width: 220rpx;
  height: 290rpx;
  display: block;

}

.category-label-text{
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 2;
  width: 150rpx;
  height: 140rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 900;
  font-size: 50rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.hero-label-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 46rpx;
  border: 1rpx solid #FFFFFF;
  z-index: 2;
  pointer-events: none;
}
.jt{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 4;
}
.ai{
  width: 702rpx;
  height: 220rpx;
  margin-top: 40rpx;
  position: relative;
  overflow: hidden;
}
.ai-img{
width: 702rpx;
height: 220rpx;
z-index: 0;
}
.ai-text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-family: PingFang-SC-Heavy;
  font-weight: 900;
  font-size: 60rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}
.section-arrow {
  position: absolute;
  right:446rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  z-index: 5;
}