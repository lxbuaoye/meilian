<view style="padding-top: {{menuBarTop}}px">
  <!-- Navigation bar (logo centered) -->
  <view style="display: flex; flex:1; align-items: center; height: {{menuBarHeight}}px; justify-content: center;">
    <image src="{{logoImage}}" style="width: 253rpx; height: 38rpx;" mode="scaleToFill" />
  </view>
</view>
<block wx:if="{{pageLoading}}">
  <view class="home-loading-wrap">
    <view class="loading-center">
      <t-loading theme="circular" size="40rpx" text="加载中..." inherit-color />
    </view>
  </view>
</block>
<block wx:else>
  <!-- 首页主内容 -->
  <view class="home-main">
    <!-- Hero row: two rounded cards -->
    <view class="hero-row">
      <view class="hero-card" bindtap="onHeroLeftTap">
        <image src="{{images.heroLeft}}" mode="aspectFill" class="hero-img" />
        <view class="hero-shadow"></view>
        <view class="hero-label-text">外墙年度人气爆款</view>
      </view>
      <view class="hero-card" bindtap="onHeroRightTap">
        <image src="{{images.heroRight}}" mode="aspectFill" class="hero-img" />
        <view class="hero-shadow"></view>
        <view class="hero-label-text">内墙年度人气爆款</view>
      </view>
    </view>

    <!-- Section header: 电子色卡 -->
    <view class="section-header" bindtap="navigateToColorCard">
      <text class="section-title">电子色卡</text>
      <image src="{{images.dzskjt}}" class="section-arrow" />
    </view>

    <!-- category cards -->
    <view class="category-row">
      <!-- <view class="category-card" bindtap="navigateToShowcase" data-cat="rjq"> 
        <image src="{{images.anli1}}" mode="aspectFill" class="category-img" />
        <view class="category-label">
          <view class="category-label-bg"></view>
          <view class="category-label-text">乳胶漆案例</view>
        </view>
      </view>
      -->
      <view class="category-card" bindtap="navigateToShowcase" data-cat="fsq" style="width: 460rpx;">
        <image src="{{images.anli2}}" mode="aspectFill" class="category-img" style="width: 460rpx;border-radius: 18rpx;" />
        <view class="category-label">
          <view class="category-label-text">仿石漆案例</view>
        </view>
      </view>
      <view class="category-card" bindtap="navigateToShowcase" data-cat="ysq">
        <image src="{{images.anli3}}" mode="aspectFill" class="category-img" />
        <view class="category-label">
          <view class="category-label-text">艺术漆案例</view>
        </view>
      </view>
    </view>

    <!-- bottom banners -->
    <view class="ai" bindtap="navigateToColorChange">
      <image src="{{images.ai}}" mode="" class="ai-img" />
      <view class="ai-text">AI换装</view>
    </view>
  </view>
  <!-- end of home content -->
</block>