.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.title-container {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-top: 10rpx;
}

.envelope-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.envelope-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding: 30rpx;
  transition: all 0.3s ease;
}

/* 移动端适配，当屏幕宽度大于600px时，改为横向排列 */
@media (min-width: 600px) {
  .envelope-card {
    flex-direction: row;
    justify-content: space-between;
  }
}

.envelope-info {
  flex-grow: 1;
  text-align: center;
  margin-bottom: 20rpx;
}

@media (min-width: 600px) {
  .envelope-info {
    text-align: left;
    margin-bottom: 0;
  }
}

.envelope-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.envelope-amount {
  font-size: 32rpx;
  color: #666;
  margin-top: 5rpx;
  display: block;
}

.envelope-status {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.status-idle {
  color: #999;
}

.status-active {
  color: #28a745;
  font-weight: bold;
}

.status-stopped {
  color: #dc3545;
}

.envelope-actions {
  display: flex;
  gap: 15rpx;
}

.action-button {
  padding: 15rpx 30rpx;
  border-radius: 15rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.2s ease, box-shadow 0.2s ease;
}

.action-button::after {
  border: none;
}

/* 发放按钮样式 */
.issue-button {
  background-color: #28a745;
}

.issue-button:not([disabled]):hover {
  background-color: #218838;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 停止按钮样式 */
.stop-button {
  background-color: #dc3545;
}

.stop-button:not([disabled]):hover {
  background-color: #c82333;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 禁用按钮的统一样式 */
.action-button[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
  box-shadow: none;
}
