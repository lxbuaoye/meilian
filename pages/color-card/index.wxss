page {
  background: #ffffff;
}

.page {
  min-height: 100vh;
  background: #ffffff;
  color: #1c2023;
  position: relative;
}

/* 导航栏（与 showcase-detail 同名同结构） */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: #ffffff;
}

.nav-status-bar {
  width: 100%;
}

.nav-content {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}

.nav-back {
  width: 48rpx;
  height: 80rpx;
}

.nav-title {
  width: 288rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
}

.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}

.content {
  padding-top: 0; /* 由 JS 动态设置 */
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 搜索 */
.search-wrap {
  width: 100%;
  height: 72rpx;
  border-radius: 36rpx;
  background: #f4f6fb;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  margin-top: 20rpx;
  margin-bottom: 0;
  box-sizing: border-box;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
  opacity: 0.7;
}

.search-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #1c2023;
  background: transparent;
}

.search-placeholder {
  color: #b8bec7;
}

/* 一级 tab */
.top-tabs {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1px solid #f0f2f5;
}

.top-tab {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #1c2023;
  position: relative;
}

.top-tab--active {
  color: #2e3fa8;
  font-weight: 700;
}

.top-tab--active::after {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
  width: 36rpx;
  height: 6rpx;
  background: #2e3fa8;
  border-radius: 3rpx;
}

/* 二级 chips */
.chips {
  margin-top: 24rpx;
  white-space: nowrap;
}

.chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  padding: 0 28rpx;
  margin-right: 18rpx;
  border-radius: 16rpx;
  background: #f4f6fb;
  color: #c3c8d1;
  font-size: 28rpx;
}

.chip--active {
  background: #2e3fa8;
  color: #ffffff;
}

/* 网格 */
.grid {
  margin-top: 26rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 26rpx 22rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
}

.grid-img {
  width: 100%;
  height: 150rpx;
  border-radius: 22rpx;
  background: #f5f7fb;
}

.grid-text {
  margin-top: 14rpx;
  font-size: 30rpx;
  color: #1c2023;
}


