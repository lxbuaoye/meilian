.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
}
.tabs {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
  box-shadow: 0 1px 0 rgba(0,0,0,0.04);
}
.tabs-scroll {
  width: 100%;
  overflow: hidden;
}
.tab-card {
  width: 250rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  position: relative;
  box-sizing: border-box;
}
.tab-card.active .tab-caption {
  font-family: PingFang-SC-Bold;
  font-weight: 700;
  font-size: 30rpx;
  color: #2E3FA8;
  letter-spacing: 0;
  text-align: center;
}
.tab-caption {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 28rpx;
  color:#1C2023;
  letter-spacing: 0;
  text-align: center;
  line-height: 100rpx;
}

.nav-back {
  position: absolute;
  left: 12px;
  width: 34rpx;
  height: 34rpx;
  z-index: 20;
}
.nav-logo {
  width: 253rpx;
  height: 38rpx;
  margin: 0 auto;
  display: block;
}
.custom-nav-bar {
  width: 750rpx;
  height: 88rpx;
  background: #FFFFFF;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-sizing: border-box;
}
.nav-status-bar {
  width: 100%;
}
.nav-content {
  position: relative;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
}
.nav-back {
  width: 40rpx;
  height: 40rpx;
}
.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #1c2023;
  z-index: 10;
}
.nav-placeholder-right {
  width: 48rpx;
  height: 80rpx;
}
.tab {
  margin-right: 12px;
  padding: 6px 10px;
  border-radius: 18px;
  color: #666;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}
.tab.active {
  background: #2E3FA8;
  color: #fff;
}
.image-wrapper {
  width: 100%;
  position: relative;
  overflow: hidden;
  flex: 1 1 auto;
}
.full-image {
  width: 100%;
  height: 100%;
  display: block;
}

