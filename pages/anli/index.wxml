<view style="padding-top: {{menuBarTop}}px">
  <!-- Navigation bar-->
  <view style="display: flex; flex:1; align-items: center; height: {{menuBarHeight}}px; justify-content: center;">
    <image src="/resources/logo.png"
      style="height: 44rpx; width: 300rpx;"
      mode="scaleToFill"></image>
  </view>
  <!-- Body -->
  <view style="text-align: center; color: #b9b9b9; margin-top: 40rpx;"
    wx:if="{{pageLoading}}">
    <t-loading theme="circular"
      size="40rpx"
      text="加载中..."
      inherit-color />
  </view>
  <t-tabs defaultValue="{{0}}"
    wx:if="{{!pageLoading}}"
    t-class="custom-tabs"
    class="tab"
    wx:for-index="categoryIndex"
    wx:key="categoryIndex"
    bind:change="onTabsChange"
    t-class-content="custom-panel">
    <t-tab-panel wx:for="{{categoryList}}"
      wx:key="index"
      label="{{item}}"
      value="{{index}}">
      <!-- Add subcategory -->
      <view style="margin: 30rpx 20rpx 0 20rpx; display: flex; flex-direction: column;">
        <showcase-card wx:for="{{showcaseMap[item]}}"
          wx:key="index"
          title="{{item.title}}"
          showcase-id="{{item._id}}"
          tags="{{item.tags}}">
        </showcase-card>
      </view>
      <view class="loading-container-flex"
        wx:if="{{listLoadingStatus[index] === 1}}">
        <t-loading theme="spinner"
          size="30rpx"
          text="加载中..."
          inheritColor
          class="wrapper" />
      </view>
    </t-tab-panel>
  </t-tabs>
</view>