<view style="height: 150rpx; border-radius: 20rpx; overflow: hidden; position: relative; display: flex;"
  hover-class="action-tile-hover"
  bind:tap="navigateToDetail">
  <image src="{{coverImageUrl}}"
    style="width: 100%; height: 150rpx;"
    mode="aspectFill"></image>
  <view style="position: absolute;bottom: 6rpx; background: #0000004d; margin: 0 10rpx; padding:0 15rpx; height: 30rpx; display: flex; justify-content: center; align-items: center; border-radius: 10rpx;">
    <text style="color: white; font-size: 12rpx; line-height: 40rpx; font-weight: 700;">{{title}}
    </text>
  </view>
</view>
<view style=" display: flex; flex:1; margin: 10rpx 0;  align-items: center; width: 100%; ">
  <tag wx:for="{{tags}}"
    wx:key="index"
    text="{{item}}"></tag>
</view>