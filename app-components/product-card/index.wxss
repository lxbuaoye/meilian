.goods-card {
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 0 0 16rpx 16rpx;
  border-bottom: none;
}

.goods-card__main {
  background: #ffffff;
  box-shadow: 0 10px 30px 0 #0000000d;
  border-radius: 10px;
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 8rpx;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.goods-card__thumb {
  flex-shrink: 0;
  position: relative;
  width: 170rpx;
  height: 170rpx;
  padding: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.goods-card__thumb:empty {
  display: none;
  margin: 0;
}

.goods-card__img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.goods-card__body {
  display: flex;
  background: #fff;
  padding: 0rpx 10rpx 15rpx 10rpx;
  flex-direction: column;
  align-items: center;
}

.goods-card__upper {
  display: flex;
  overflow: hidden;
  align-items: center;
  margin-top: 4px;
}

.goods-card__title {
  font-size: 14rpx;
  color: #1c2023;
  font-weight: 700;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  word-break: break-word;
  line-height: 20rpx;
  white-space: nowrap;
}

.goods-card__subtitle {
  flex-shrink: 0;
  font-size: 11rpx;
  color: #8f969c;
  font-weight: 400;
  display: -webkit-box;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
}

.goods-card__tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 4rpx 0 0 0;
}

.goods-card__tag {
  color: #e34d59;
  background: transparent;
  font-size: 10rpx;
  border: 1rpx solid #fa4126;
  padding: 0 8rpx;
  border-radius: 8rpx;
  margin: 0 4rpx 4rpx 0;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  word-break: keep-all;
  text-overflow: ellipsis;
}

.goods-card__down {
  display: flex;
  position: relative;
  flex-direction: column;
  justify-content: flex-start;
  align-items: baseline;
  margin: 4rpx 0 0 0;
}

.goods-card__origin-price {
  white-space: nowrap;
  font-weight: 700;
  order: 2;
  color: #bbbbbb;
  font-size: 12rpx;
  margin: 0 0 0 4rpx;
}
.spec-for-price {
  font-size: 18rpx;
  white-space: nowrap;
  font-weight: 700;
  order: 1;
  color: #e34d59;
  margin: 0;
}

.spec-for-symbol {
  font-size: 24rpx;
}

.one-line {
  max-width: 145rpx;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
  text-overflow: ellipsis;
}

.view-box-hover {
  transform: scale(0.98, 0.98);
}
