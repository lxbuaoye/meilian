<t-tab-bar value="{{active}}"
  bindchange="onChange"
  class="tab-bar"
  shape="{{isMp? 'normal' : 'round'}}"
  split="{{false}}">
  <t-tab-bar-item wx:for="{{list}}"
    wx:for-item="item"
    wx:for-index="index"
    wx:key="index">
    <view class="custom-tab-bar-wrapper {{active === index ? 'active' : ''}}">
      <image src="{{active === index && item.activeIcon ? item.activeIcon : item.icon}}" class="tab-icon" mode="aspectFit"></image>
      <view class="tab-text {{active === index ? 'active' : ''}}">{{ item.text }}</view>
    </view>
  </t-tab-bar-item>
</t-tab-bar>