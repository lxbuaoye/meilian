.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx; /* 其他 icon 距离顶部 15rpx */
  /* 使每个 tab 项目占据相等宽度，保证中间项水平位置与其他项一致 */
  flex: 1;
  min-width: 0;
  /* 保证五个项在水平方向等分 */
  width: 20%;
  box-sizing: border-box;
}

.tab-bar-container {
  display: flex; /* 启用 flex 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中，如果需要 */

  /* 如果 t-tab-bar 位于屏幕底部且宽度不定，需要这样设置父容器 */
  position: fixed; /* 固定在屏幕某个位置 */
  bottom: 0; /* 距离底部0 */
  left: 0; /* 距离左边0 */
  right: 0; /* 距离右边0 */
  width: 100%; /* 占据整个宽度 */
  /* height: 80px; */ /* 如果需要固定高度 */
  /* background-color: #f0f0f0; */ /* 调试背景色 */
}

/* 普通按钮图标样式 */
.tab-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 普通按钮文字样式 */
.tab-text {
  height: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 20rpx;
  color: #C5C8CB;
  letter-spacing: 0;
  text-align: center;
  margin-top: 4rpx;
  line-height: 28rpx;
  white-space: nowrap; /* 不换行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 选中状态的文字样式 */
.tab-text.active {
  color: #2E3FA8;
}

.tab-bar {
  /* #if IOS || ANDROID*/
  margin-bottom: 15rpx;
  --td-tab-bar-height: 16rpx;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  margin-left: auto;
  margin-right: auto;
  --td-tab-bar-bg-color: transparent;
  /* #endif */
  --td-tab-bar-active-color: #2E3FA8;
}

/* 中间椭圆样式 */
.middle-oval {
  width: 150rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #2E3FA8;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 0rpx; /* 中间提升，不和其它图标同一高度 */
  box-shadow: 0 4rpx 12rpx rgba(46,63,168,0.2);
}
.middle-oval-text {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 700;
  line-height: 28rpx;
}
.custom-tab-bar-wrapper.active .middle-oval {
  /* 选中状态可略微放大（保留占位以兼容旧样式引用） */
  transform: scale(1.02);
}

/* 中间图片替代原椭圆的样式 */
.middle-icon {
  /* 与其他图标保持一致的尺寸与间距 */
  width: 40rpx;
  height: 40rpx;
  /* 与普通 tab-icon 对齐，不额外偏移 */
  margin-top: 0rpx;
}

/* 中间图片下方文字样式 */
.middle-text {
  /* 与普通 tab-text 保持一致 */
  margin-top: 4rpx;
  font-size: 20rpx;
}
