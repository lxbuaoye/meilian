.custom-tab-bar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx; /* 其他 icon 距离顶部 15rpx */
}

.tab-bar-container {
  display: flex; /* 启用 flex 布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中，如果需要 */

  /* 如果 t-tab-bar 位于屏幕底部且宽度不定，需要这样设置父容器 */
  position: fixed; /* 固定在屏幕某个位置 */
  bottom: 0; /* 距离底部0 */
  left: 0; /* 距离左边0 */
  right: 0; /* 距离右边0 */
  width: 100%; /* 占据整个宽度 */
  /* height: 80px; */ /* 如果需要固定高度 */
  /* background-color: #f0f0f0; */ /* 调试背景色 */
}

/* 普通按钮图标样式 */
.tab-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 普通按钮文字样式 */
.tab-text {
  height: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  font-size: 20rpx;
  color: #C5C8CB;
  letter-spacing: 0;
  text-align: center;
  margin-top: 4rpx;
  line-height: 28rpx;
  white-space: nowrap; /* 不换行 */
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 选中状态的文字样式 */
.tab-text.active {
  color: #2E3FA8;
}

.tab-bar {
  /* #if IOS || ANDROID*/
  margin-bottom: 15rpx;
  --td-tab-bar-height: 16rpx;
  width: 500rpx;
  background-color: rgba(255, 255, 255, 0.9);
  margin-left: auto;
  margin-right: auto;
  --td-tab-bar-bg-color: transparent;
  /* #endif */
  --td-tab-bar-active-color: #2E3FA8;
}

/* 特殊按钮样式：预约到店（中间按钮） */
.special-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 11rpx; /* 预约到店按钮距离顶部 11rpx */
}

.special-button-image {
  width: 98rpx;
  height: 98rpx;
}
